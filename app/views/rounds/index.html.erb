<p id="notice"><%= notice %></p>

<h1>Listing Rounds</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Player</th>
      <th>Number of holes</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rounds.each do |round| %>
      <tr>
        <td><%= round.player %></td>
        <td><%= round.numholes %></td>
        <td><%= round.score %></td>
        <td><%= link_to 'Show', round, class: 
        "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_round_path(round), class: 
        "btn btn-link" %></td>
        <td><%= link_to 'Destroy', round, method: :delete, data: { confirm: 'Are you sure?' }, class: 
        "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

